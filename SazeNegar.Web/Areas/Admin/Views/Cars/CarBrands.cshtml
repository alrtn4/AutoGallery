@using Kendo.Mvc.UI
@model SazeNegar.Web.ViewModels.CarBrandsViewModel
@{
    ViewBag.Title = "کاربران ";
    List<TreeViewItemModel> treeItems = ViewBag.TreeItems as List<TreeViewItemModel>;
}
<input type="hidden" id="nav_active" value="auth_control">
<input type="hidden" id="nav_item_active" value="users">
<div class="col-lg-6">
    <div class="card card-custom gutter-b example example-compact">
        <div class="card-header">
            <h3 class="card-title">
                @*نام کاربری : @ViewBag.UserName*@
            </h3>
        </div>
        @using (Html.BeginForm())
        {

            <div class="col-md-6 mt-5 ml-5">
                <div class="form-group">
                    <label for="exampleFormControlSelect1">لیست برندها</label>
                    <select class="form-control" id="exampleFormControlSelect1">
                        @foreach(var item in Model.CarBrandsList)
                        {
                            <option>@item.Brand</option>
                        }
                    </select>
                </div>
            </div>
            <br />
            <div class="card-footer">
                <input type="hidden" name="carId" id="carId" value="@ViewBag.CarID" />
                <a href="@Url.Action("Index")">انصراف</a> |
                <input type="submit" value="ذخیره تغییرات" class="btn btn-primary" />
            </div>

        }
    </div>
</div>